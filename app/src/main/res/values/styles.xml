<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.EventTimer</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar.Solid.EventTimer"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red</item>
    </style>

    <!-- Main activity theme -->
    <style name="EventTimerTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.EventTimer.Title</item>
    </style>

    <!-- Main activity action bar style -->
    <style name="ActionBar.Solid.EventTimer.Title"
        parent="@style/ActionBar.Solid.EventTimer">
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="ForecastListStyle"></style>

</resources>
