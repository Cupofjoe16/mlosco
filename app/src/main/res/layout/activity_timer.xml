<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pjlosco.eventtimer.timer.TimerActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    >

    <fragment android:name="com.pjlosco.eventtimer.timer.ClockFragment"
        android:id="@+id/timerClock"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <fragment android:name="com.pjlosco.eventtimer.timer.TimerListFragment"
        android:id="@+id/viewer"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>
